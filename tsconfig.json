{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "lib": [
            "es2017",
            "dom"
        ],
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "skipDefaultLibCheck": true,
        "pretty": true,
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test",
        "example"
    ],
    "exclude": [
        "node_modules"
    ]
}